@page "/Skills"
@layout MainLayout

<link rel="stylesheet" href="/css/Skill.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container-fluid d-flex flex-column justify-content-center vh-100">
    <section class="p-4">
        <h2 class="text-uppercase fw-bold mb-4">Skills</h2>

        <!-- Programming Languages & Tools -->
        <div class="mb-4">
            <h6 class="text-uppercase fw-semibold text-muted mb-3">Programming Languages & Tools</h6>
            <div class="d-flex flex-wrap gap-3">
                <i class="fab fa-html5 fa-2x text-secondary"></i>
                <i class="fab fa-css3-alt fa-2x text-secondary"></i>
                <i class="fab fa-js-square fa-2x text-secondary"></i>
                <i class="fab fa-angular fa-2x text-secondary"></i>
                <i class="fab fa-react fa-2x text-secondary"></i>
                <i class="fab fa-node-js fa-2x text-secondary"></i>
                <i class="fab fa-sass fa-2x text-secondary"></i>
                <i class="fab fa-wordpress fa-2x text-secondary"></i>
                <i class="fab fa-npm fa-2x text-secondary"></i>
            </div>
        </div>

        <!-- Workflow -->
        <div>
            <h6 class="text-uppercase fw-semibold text-muted mb-3">Workflow</h6>
            <ul class="list-unstyled text-muted">
                <li><i class="fas fa-check text-primary me-2"></i> Mobile-First, Responsive Design</li>
                <li><i class="fas fa-check text-primary me-2"></i> Cross Browser Testing & Debugging</li>
                <li><i class="fas fa-check text-primary me-2"></i> Cross Functional Teams</li>
                <li><i class="fas fa-check text-primary me-2"></i> Agile Development & Scrum</li>
            </ul>
        </div>
    </section>
</div>
