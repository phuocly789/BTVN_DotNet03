<div class="card">
    <img src="@prodItem.img" alt="...">
    <div class="card-body">
        <h1 class="card-title">
            @prodItem.name
        </h1>
        <p class="card-text">
           @prodItem.price
        </p>
        <button class="btn btn-dark"> <i class="fa fa-cart-plus" aria-hidden="true"></i> Add To Cart</button>
    </div>
</div>
@code {
    [Parameter]
    public ProductCartVM prodItem { get; set; }=new ProductCartVM();
}
